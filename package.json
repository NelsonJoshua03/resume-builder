{
  "name": "careercraft-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://careercraft.in",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "deploy": "deploy.bat",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:all": "firebase deploy",
    "firebase:login": "firebase login",
    "firebase:status": "firebase projects:list",
    "firebase:use": "firebase use careercraft-36711",
    "clean": "rm -rf dist",
    "fresh": "npm run clean && npm install",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "preview:prod": "vite preview --port 3001 --host",
    "optimize": "npm run clean && npm install --legacy-peer-deps && npm run build:prod",
    "analyze": "npx vite-bundle-analyzer"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
