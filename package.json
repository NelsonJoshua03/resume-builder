    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.2",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^20.10.0",
