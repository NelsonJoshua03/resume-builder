rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public reads (users can view jobs)
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2025, 12, 31);
    }
    
    match /jobDrives/{driveId} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2025, 12, 31);
    }
    
    // Only admin can write to analytics
    match /events/{eventId} {
      allow read: if false; // Disable reads
      allow write: if true; // Allow writes for tracking
    }
  }
}